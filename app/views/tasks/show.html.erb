<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<br>
<%= form_for @task do |f| -%>
  <div class="field">
    <%= f.check_box :completed %>
    <%= f.label "Check if completed" %> <br />
    <%= f.submit %>
  </div>
<% end -%>
<br>
<%= link_to "Edit task", edit_task_path %>
<br>
<%= link_to "Back to all tasks", tasks_path %>
